<Application x:Class="UtilitiCompany.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:UtilitiCompany"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- order is important -->
                <ResourceDictionary Source="Style/Colors.xaml"/>
                <ResourceDictionary Source="Style/ButtonStyles.xaml"/>
                <ResourceDictionary Source="Style/Text.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
