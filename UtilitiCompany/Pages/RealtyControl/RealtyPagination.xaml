<UserControl x:Class="UtilitiCompany.Pages.RealtyControl.RealtyPagination"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UtilitiCompany.Pages.RealtyControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="7*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            
        </Grid.RowDefinitions>
        
        <ListBox Name="RealtyList" Grid.Row="0">
            
        </ListBox>

        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="2" Width="200" Height="30">

            <Button Content="Next >" HorizontalAlignment="Right" VerticalAlignment="Center"
                    Height="30" Width="90" Style="{StaticResource StandartButton}"
                    FontWeight="SemiBold" FontSize="17" Click="NextBtn_Click"/>

            <Button Content="Back" HorizontalAlignment="Left" VerticalAlignment="Center"
                    Height="30" Width="90" Style="{StaticResource StandartButton}"
                    FontWeight="SemiBold" FontSize="17" Click="BackBtn_Click"/>

        </Grid>

    </Grid>
</UserControl>
