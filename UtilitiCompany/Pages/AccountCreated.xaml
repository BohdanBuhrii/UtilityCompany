<UserControl x:Class="UtilitiCompany.Pages.AccountCreated"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UtilitiCompany.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Name="MainGrid">
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Height="200">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label Content="Account created successfully!" Grid.Row="0" HorizontalAlignment="Center"
               FontSize="25" Foreground="{StaticResource MainDarkColorBrush}" VerticalAlignment="Bottom"/>
        <Button Content="Log In"  Height="42"  Width="114" Grid.Row="1" 
               Style="{StaticResource StandartButton}" Click="Button_Click" />

    </Grid>
    </Grid>
</UserControl>
